#!/bin/sh

lessc less/konnun.less css/konnun.css
lessc less/reports.less css/reports.css
lessc less/visar.less css/visar.css
lessc less/ops.less css/ops.css

echo "Compiled 4 .less files"


cat js/lib/jquery.1.9.1.min.js js/global/messages.js >> js/konnun.js
cat js/lib/jquery.1.9.1.min.js js/global/messages.js | jsmin > js/konnun-min.js

cat js/lib/jquery.1.9.1.min.js js/global/messages.js >> js/ops.js
cat js/lib/jquery.1.9.1.min.js js/global/messages.js | jsmin > js/ops-min.js

cat js/lib/jquery.1.9.1.min.js js/lib/enquire.js js/global/messages.js >> js/reports.js
cat js/lib/jquery.1.9.1.min.js js/lib/enquire.js js/global/messages.js | jsmin > js/reports-min.js

cat js/lib/jquery.1.9.1.min.js js/lib/enquire.js  >> js/reports.js
cat js/lib/jquery.1.9.1.min.js js/lib/enquire.js | jsmin > js/reports-min.js

echo "Combined 8 .js files"
